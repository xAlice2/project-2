<%- include('../partials/navbar') %>

<style>
    body {
        background-image: url('../assets/main.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>



<section class="ftco-section align-middle">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section lightgold h1">Login</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <p class="mb-4 text-center h4 lightw">Have an account?</p>

                    <form action="/auth/login" class="signin-form" method="POST">
                        <div class="form-group">
                            <label for="auth-email"></label>
                            <input id="auth-email" type="email" name="email" class="form-control" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="auth-password"></label>
                            <input id="auth-password" type="password" name="password" class="form-control" placeholder="Password" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit text__shadow">Sign In</button>
                        </div>
                    </form>

                    <p class="w-100 text-center my-5"><a class="nav-link lightw" href="/">&mdash; Sign up for an account &mdash; </a></p>


                </div>
            </div>
        </div>
    </div>
</section>

