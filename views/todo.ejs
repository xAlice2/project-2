
<h2>Todo page</h2>



<% if(Array.isArray(todo.tasks) && todo.tasks.length > 0) { %>
<% todo.tasks.forEach(function(task) { %>
    <div class="well">
      <h2>
        <form action="./todo/<%= task.id %>?_method=PUT" method="POST">
          <span>title<%= task.title %></span>
          <input type="checkbox" id="vehicle1" name="complete" value=<%= task.complete %>>
        </form>
      </h2>

    </div>
  <% }) %>
  <% } else { %>
    <div class="panel-body">
      No Tasks...
    </div>
<% } %>

  <% if(Array.isArray(todo.notes) && todo.notes.length > 0) { %>
    <% todo.notes.forEach(function(note) { %>
      <div class="well">
        <h2>
          <p><%= note.comment %> </p>
        </h2>

      </div>
    <% }) %>
  <% } else { %>
    <div class="panel-body">
      No Notes...
    </div>
<% } %>
